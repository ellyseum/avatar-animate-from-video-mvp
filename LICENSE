RESEARCH ATTRIBUTIONS

This project builds upon the following research works. If you use this software
in your research, please cite the original papers:

FrankMocap:
  @inproceedings{rong2021frankmocap,
    title={FrankMocap: A Monocular 3D Whole-Body Pose Estimation System},
    author={Rong, Yu and Shiratori, Takaaki and Joo, Hanbyul},
    booktitle={IEEE International Conference on Computer Vision Workshops},
    year={2021}
  }

SMPL Body Model:
  @article{SMPL:2015,
    author = {Loper, Matthew and Mahmood, Naureen and Romero, Javier and 
              Pons-Moll, Gerard and Black, Michael J.},
    title = {{SMPL}: A Skinned Multi-Person Linear Model},
    journal = {ACM Trans. Graphics (Proc. SIGGRAPH Asia)},
    volume = {34},
    number = {6},
    pages = {248:1--248:16},
    year = {2015}
  }

SMPL-X Body Model:
  @inproceedings{SMPL-X:2019,
    title = {Expressive Body Capture: {3D} Hands, Face, and Body from a 
             Single Image},
    author = {Pavlakos, Georgios and Choutas, Vasileios and Ghorbani, Nima and 
              Bolkart, Timo and Osman, Ahmed A. A. and Tzionas, Dimitrios and 
              Black, Michael J.},
    booktitle = {Proceedings IEEE Conf. on Computer Vision and Pattern 
                 Recognition (CVPR)},
    year = {2019}
  }

EFT (Exemplar Fine-Tuning):
  @inproceedings{joo2020eft,
    title={Exemplar Fine-Tuning for 3D Human Model Fitting Towards In-the-Wild 
           3D Human Pose Estimation},
    author={Joo, Hanbyul and Neverova, Natalia and Vedaldi, Andrea},
    booktitle={3DV},
    year={2020}
  }

Lightweight Human Pose Estimation:
  @inproceedings{osokin2018lightweight,
    title={Real-time 2D Multi-Person Pose Estimation on CPU: Lightweight 
