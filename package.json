{
  "name": "avatar-animate-from-video-mvp",
  "version": "1.2.1",
  "description": "Docker-based pipeline for video-to-mocap extraction and avatar animation using FrankMocap and headless Blender with CUDA GPU support.",
  "main": "pipeline_runner.js",
  "bin": {
    "pipeline-runner": "./pipeline_runner.js"
  },
  "scripts": {
    "bootstrap": "./scripts/bootstrap.sh",
    "pipeline": "node pipeline_runner.js",
    "batch": "node pipeline_runner.js --batch",
    "docker:build": "docker build -t blender-headless .",
    "docker:gpu-info": "docker run --rm --gpus all blender-headless --gpu-info",
    "docker:shell": "docker run --rm -it --gpus all -v $(pwd):/workspace blender-headless --shell",
    "docker:version": "docker run --rm blender-headless --version",
    "frank:build": "docker build -t frankmocap-gpu -f frankmocap/Dockerfile .",
    "frank:pull": "docker pull ghcr.io/ellyseum/frankmocap-gpu:latest && docker tag ghcr.io/ellyseum/frankmocap-gpu:latest frankmocap-gpu",
    "frank:gpu-info": "docker run --rm --gpus all frankmocap-gpu --gpu-info",
    "frank:shell": "docker run --rm -it --gpus all -v $(pwd)/smpl:/opt/frankmocap/extra_data/smpl frankmocap-gpu --shell",
    "frank:version": "docker run --rm frankmocap-gpu --version",
    "frank:run": "docker run --rm --gpus all -v $(pwd)/smpl:/opt/frankmocap/extra_data/smpl -v $(pwd)/output:/workspace/output frankmocap-gpu",
    "test": "./scripts/test-pipeline.sh",
    "lint": "eslint *.js",
    "dev:server": "node server/index.js",
    "dev:web": "cd web && npm run dev",
    "dev": "node -e \"const{spawn}=require('child_process');const s=spawn('node',['server/index.js'],{stdio:'inherit'});const w=spawn('npm',['run','dev'],{cwd:'web',stdio:'inherit'});process.on('SIGINT',()=>{s.kill();w.kill();process.exit()})\"",
    "build:web": "cd web && npm run build"
  },
  "keywords": [
    "blender",
    "3d",
    "rigging",
    "animation",
    "retargeting",
    "mocap",
    "docker",
    "headless",
    "gpu",
    "cuda"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  }
}
